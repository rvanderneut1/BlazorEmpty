    // hier wordt een lege nieuwe lijst gedefinieerd. Die ik hierboven aan kan roepen om weer te geven.
    private List<int> _magicNumbers = new List<int>();

    protected override void OnInitialized()
    {
        //hier worden de magicNumberService opgehaald en opgeslagen op de pagina
